<div class="page-width page-content page-account">

      <header class="section-header">
        <h1 class="section-header__title">{{ 'general.account.login_en' | t }}</h1>
        <span>{{ 'general.account.login' | t }}</span>
      </header>

      <div class="note note--success hide" id="ResetSuccess">
        {{ 'customer.recover_password.success' | t }}
      </div>

      <div id="CustomerLoginForm" class="form-vertical">
        {%- form 'customer_login' -%}

          {{ form.errors | default_errors }}

          <label for="CustomerEmail">{{ 'general.account.email' | t }}</label>
          <input type="email" placeholder="info@monatelier-jewelry.com" name="customer[email]" id="CustomerEmail" class="input-full{% if form.errors contains 'email' %} error{% endif %}" autocorrect="off" autocapitalize="off" autofocus>

          {%- if form.password_needed -%}
            <div class="grid">
              <div class="grid__item one-half">
                <label for="CustomerPassword">{{ 'general.account.password' | t }}</label>
              </div>
              <div class="grid__item one-half text-right">
                <small class="label-info">
                  <a href="/login#recover" id="RecoverPassword">
                    {{ 'customer.login.forgot_password' | t }}
                  </a>
                </small>
              </div>
            </div>
            <input type="password" value="" name="customer[password]" id="CustomerPassword" class="input-full{% if form.errors contains 'password' %} error{% endif %}">
          {%- endif -%}

          <p style="text-align: center;">
            <button type="submit" class="btn btn--full">
              {{ 'customer.login.sign_in' | t }}
            </button>
          </p>
          <p style="text-align: center;">
            <a href="/account/register" class="arrow-link" id="customer_register_link">{{ 'layout.customer.create_account' | t  }}</a>
            </p>

        {%- endform -%}
      </div>

      <div id="RecoverPasswordForm" class="hide">
        <div class="form-vertical">
          <p style="text-align: center; margin-bottom: 41px;">{{ 'customer.recover_password.subtext' | t }}</p>

          {%- form 'recover_customer_password' -%}

            {{ form.errors | default_errors }}

            {%- if form.posted_successfully? -%}
              <span class="hide reset-password-success"></span>
            {%- endif -%}

            <label for="RecoverEmail">{{ 'customer.recover_password.email' | t }}</label>
            <input type="email" placeholder="info@monatelier-jewelry.com"  value="" name="email" id="RecoverEmail" class="input-full" autocorrect="off" autocapitalize="off">

            <p style="text-align: center;">
              <button type="submit" class="btn">
                {{ 'customer.recover_password.submit' | t }}
              </button>
            </p>
          {%- endform -%}
        </div>

      </div>
{% comment %}
      {%- if shop.checkout.guest_login -%}
        <hr class="hr--clear">

        <h1>{{ 'customer.login.guest_title' | t }}</h1>
        <hr class="hr--small">

        {%- form 'guest_login' -%}
          <button type="submit" class="btn">
            {{ 'customer.login.guest_continue' | t }}
          </button>
        {%- endform -%}
      {%- endif -%}
{% endcomment %}
</div>

<div class="bread-pages">
  <a href="/">{{ 'general.site.top' | t }}</a> <span>ï¼ž</span> {{ 'general.account.login' | t }} 
</div>