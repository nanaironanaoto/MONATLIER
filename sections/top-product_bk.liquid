<section class="top-product">
<div class="index-section product-carousel">
<div class="page-width">    
  <div class="section-header">
      <h2 class="section-header__title">{{ 'general.site.collection' | t }}</h2>
    <span>{{ 'general.product.text' | t }}</span>
  </div>

{%- assign grid_item_width = 'medium-up--one' -%}
<ul class="top-product-slider">
{% for product in collections.frontpage.products %}
  <li>{% include 'product-grid-item' %}</li>
{% endfor %}
</ul>
  <div class="rte"><a href="/collections/all" class="see-more left text-link ">{{ 'general.site.see_all' | t }}</a></div>
  </div>
  </div>
  
  

    <div class="para-img medium--hide is-3"><img src="https://cdn.shopify.com/s/files/1/0268/1202/2962/files/ring-2.png?v=1614868402"></div>
  
</section>

<script>
  $(function() {
 $('.top-product-slider').slick({ 
  infinite: true,
    slidesToShow: 6, //「オプション名: 値」の形式で書く
     responsive: [{
         		breakpoint: 1920,
                  settings: {
                    slidesToShow: 4,
                    slidesToScroll: 1,
                }
       			},{
         		breakpoint: 1060,
                  settings: {
                    slidesToShow: 3,
                    slidesToScroll: 1,
                }
       			},{
         		breakpoint: 769,
                  settings: {
                    slidesToShow: 2,
                    slidesToScroll: 1,
                }
       			},{
              
                breakpoint: 480,
                  settings: {
                    slidesToShow: 2,
                    slidesToScroll: 1,
                },
              }
              ]
   
  });
});
  </script>
