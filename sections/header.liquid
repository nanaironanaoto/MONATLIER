    $(this).find('.menu_contents').stop().fadeIn(350, "linear");
    $('.top-header').addClass("is-hover");
    $('.site-header').addClass("is-hover");
  }, function() {
    $(this).find('.menu_contents').stop().fadeOut(350, "linear");
    $('.top-header').removeClass("is-hover");
    $('.site-header').removeClass("is-hover");
  });
});


//--SP：メニュー内アコーディオンクリックで展開


$(function(){

    var parent = $('.sp-js-accordion');
  parent.each(function(){
  var self = $(this);
  self.on('click',function(){
    parent.not(self).parent().next().slideUp(300);
        parent.not(self).parent().next().removeClass("active");
    self.parent().next().slideToggle(300);
        $(this).toggleClass("is-active");
    });
  });
});
  
