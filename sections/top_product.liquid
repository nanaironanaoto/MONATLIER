<!--newitem-->
<div class="content">
  <div class="newitem">
    {% for product in collections.frontpage.products %}
      {% include 'product_card' %}
      {% comment %} <div class="product">
        {{ 'product01' | asset_url | img_tag }}
        <div class="product_info">
          <p>ダイヤモンドK10 0.03ct</p>
          <p>［オリンド］リング</p>
          <p>¥24,200</p>
        </div>
      </div> {% endcomment %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": {
    "ja": "サンプルセクション"
  },
  "class": "sample_section",
  "blocks": [
    {
      "type": "custom",
      "name": {
        "ja": "画像"
      },
      "limit": 3,
      "settings": [
        {
          "type": "image_picker",
          "id": "image_picker",
          "label": {
            "ja": "画像"
          }
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "checkbox",
      "id": "is_visivle",
      "label": {
        "ja": "表示する？"
      },
      "info": {
        "ja": "チェックを入れると表示、外すと非表示になります。"
      }
    },
    {
      "type": "textarea",
      "id": "text",
      "label": {
        "ja": "本文"
      },
      "default": {
        "ja": "default text. default text."
      }
    }
  ],
  "presets": [
    {
      "name": {
        "ja": "サンプルセクション"
      },
      "category": {
        "ja": "_カスタム"
      }
    }
  ]
}
{% endschema %}
