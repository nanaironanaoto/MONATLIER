  assign product_price_font = section.settings.product_price_font
  assign product_price_size = section.settings.product_price_size

  assign product_des_color = section.settings.product_des_color
  assign product_des_font = section.settings.product_des_font
  assign product_des_size = section.settings.product_des_size

  assign swatch_enable = section.settings.swatch_enable
  assign show_swatch_tooltip = section.settings.show_swatch_tooltip
  assign swatch_change_img = section.settings.swatch_change_img | default: 'hover'
  assign swatch_by_color_apply = section.settings.swatch_by_color_apply
  assign swatch_by_color_shape = section.settings.swatch_by_color_shape | default: 'circle'
