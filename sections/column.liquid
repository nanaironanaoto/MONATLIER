<!-- column -->
<div class="content">
  <div class="column_col">
    <div class="title">
      <h3><ls-static-499144>コラム</ls-static-499144></h3>
      <p><ls-static-450428>COLUMN</ls-static-450428></p>
    </div>
    <div class="cssreset">
      <ul>
        {%- assign columns = blogs[section.settings.column] -%}
        {% for column in columns.articles limit:section.settings.column_limit %}
          <li>
            <a href="{{ column.url }}">
              <div class="column_row">
                <div class="tt_drugs_r">
                    <p>{{ column.published_at | date: '%Y/%m/%d' }}</p>
                </div>
                <div>
                  <p>{{ column.title }}</p>
                </div>
              </div>
            </a>
          </li>
      {% endfor %}
      </ul>
    </div>
  </div>
</div>

{% schema %}
{
  "name": {
    "ja": "コラム"
    },
  "settings": [
    {
      "id": "column",
      "type": "blog",
      "label": {
        "ja": "コラム"
      }
    },
    {
      "id": "column_limit",
      "type": "number",
      "label": {
        "ja": "表示する数"
      }
    }
  ],
  "presets": [
    {
      "name": {
        "ja": "コラム"
        },
      "category": {
        "ja": "新規メニュー"
        }
    }
  ]
}
{% endschema %}
