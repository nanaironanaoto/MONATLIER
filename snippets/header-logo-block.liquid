{%- for block in section.blocks -%}
  {%- if block.type == 'logo' -%}
    {%- liquid
      assign has_logo = true
      assign header_logo_size = block.settings.desktop_logo_width | append: 'x'
      assign header_logo_size_mobile = block.settings.mobile_logo_width | append: 'x'
    -%}

    {%- style -%}
    .header-item--logo,
    .header-layout--left-center .header-item--logo,
    .header-layout--left-center .header-item--icons {
      -webkit-box-flex: 0 1 {{ block.settings.mobile_logo_width }}px;
      -ms-flex: 0 1 {{ block.settings.mobile_logo_width }}px;
      flex: 0 1 {{ block.settings.mobile_logo_width }}px;
    }

    @media only screen and (min-width: 769px) {
      .header-item--logo,
      .header-layout--left-center .header-item--logo,
      .header-layout--left-center .header-item--icons {
        -webkit-box-flex: 0 0 {{ block.settings.desktop_logo_width }}px;
        -ms-flex: 0 0 {{ block.settings.desktop_logo_width }}px;
        flex: 0 0 {{ block.settings.desktop_logo_width }}px;
      }
    }

    .site-header__logo a {
      width: {{ block.settings.mobile_logo_width }}px;
    }
    .is-light .site-header__logo .logo--inverted {
      width: {{ block.settings.mobile_logo_width }}px;
    }
    @media only screen and (min-width: 769px) {
      .site-header__logo a {
        width: {{ block.settings.desktop_logo_width }}px;
      }

      .is-light .site-header__logo .logo--inverted {
        width: {{ block.settings.desktop_logo_width }}px;
      }
    }
    {%- endstyle -%}

    {%- if template == 'index' -%}
      <h1 class="site-header__logo" itemscope itemtype="http://schema.org/Organization">
        <span class="visually-hidden">{{ shop.name }}</span>
    {%- else -%}
      <div class="h1 site-header__logo" itemscope itemtype="http://schema.org/Organization">
    {%- endif -%}

    {%- if block.settings.logo -%}
      {% comment %}
        .logo--has-inverted is only applied to the default logo if the inverted logo exists. That way it'll only be hidden on the slider when it has a backup.
      {% endcomment %}
      <a
        href="{{ routes.root_url }}"
        itemprop="url"
        class="site-header__logo-link{% if block.settings.logo-inverted %} logo--has-inverted{% endif %}">
        <img
          class="small--hide"
          src="{% comment ls-rpl %}{{ block.settings.logo | img_url: header_logo_size }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: block.settings.logo, img_url: header_logo_size -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %}"
          srcset="{% comment ls-rpl %}{{ block.settings.logo | img_url: header_logo_size }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: block.settings.logo, img_url: header_logo_size -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %} 1x, {% comment ls-rpl %}{{ block.settings.logo | img_url: header_logo_size, scale: 2 }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: block.settings.logo, img_url: header_logo_size, scale: 2 -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %} 2x"
          alt="{% comment ls-rpl %}{{ block.settings.logo.alt | default: shop.name }}{% endcomment %}{%- capture LS_ALT -%}{%- render "ls-alt", image: block.settings.logo -%}{%- endcapture -%}{{ LS_ALT | default: shop.name }}{% comment /ls-rpl %}{% endcomment %}"
          itemprop="logo">
        <img
          class="medium-up--hide"
          src="{% comment ls-rpl %}{{ block.settings.logo | img_url: header_logo_size_mobile }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: block.settings.logo, img_url: header_logo_size_mobile -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %}"
          srcset="{% comment ls-rpl %}{{ block.settings.logo | img_url: header_logo_size_mobile }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: block.settings.logo, img_url: header_logo_size_mobile -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %} 1x, {% comment ls-rpl %}{{ block.settings.logo | img_url: header_logo_size_mobile, scale: 2 }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: block.settings.logo, img_url: header_logo_size_mobile, scale: 2 -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %} 2x"
          alt="{% comment ls-rpl %}{{ block.settings.logo.alt | default: shop.name }}{% endcomment %}{%- capture LS_ALT -%}{%- render "ls-alt", image: block.settings.logo -%}{%- endcapture -%}{{ LS_ALT | default: shop.name }}{% comment /ls-rpl %}{% endcomment %}">
      </a>
      {%- if block.settings.logo-inverted -%}
        <a
          href="{{ routes.root_url }}"
          itemprop="url"
          class="site-header__logo-link logo--inverted">
          <img
            class="small--hide"
            src="{% comment ls-rpl %}{{ block.settings.logo-inverted | img_url: header_logo_size }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: block.settings.logo-inverted, img_url: header_logo_size -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %}"
            srcset="{% comment ls-rpl %}{{ block.settings.logo-inverted | img_url: header_logo_size }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: block.settings.logo-inverted, img_url: header_logo_size -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %} 1x, {% comment ls-rpl %}{{ block.settings.logo-inverted | img_url: header_logo_size, scale: 2 }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: block.settings.logo-inverted, img_url: header_logo_size, scale: 2 -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %} 2x"
            alt="{% comment ls-rpl %}{{ block.settings.logo-inverted.alt | default: shop.name }}{% endcomment %}{%- capture LS_ALT -%}{%- render "ls-alt", image: block.settings.logo-inverted -%}{%- endcapture -%}{{ LS_ALT | default: shop.name }}{% comment /ls-rpl %}{% endcomment %}"
            itemprop="logo">
          <img
            class="medium-up--hide"
            src="{% comment ls-rpl %}{{ block.settings.logo-inverted | img_url: header_logo_size_mobile }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: block.settings.logo-inverted, img_url: header_logo_size_mobile -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %}"
            srcset="{% comment ls-rpl %}{{ block.settings.logo-inverted | img_url: header_logo_size_mobile }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: block.settings.logo-inverted, img_url: header_logo_size_mobile -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %} 1x, {% comment ls-rpl %}{{ block.settings.logo-inverted | img_url: header_logo_size_mobile, scale: 2 }}{% endcomment %}{%- capture LS_IMG_URL -%}{%- render "ls-img-url", image: block.settings.logo-inverted, img_url: header_logo_size_mobile, scale: 2 -%}{%- endcapture -%}{{ LS_IMG_URL }}{% comment /ls-rpl %}{% endcomment %} 2x"
            alt="{% comment ls-rpl %}{{ block.settings.logo.alt | default: shop.name }}{% endcomment %}{%- capture LS_ALT -%}{%- render "ls-alt", image: block.settings.logo -%}{%- endcapture -%}{{ LS_ALT | default: shop.name }}{% comment /ls-rpl %}{% endcomment %}">
        </a>
      {%- endif -%}
    {%- else -%}
      <a href="{{ routes.root_url }}" itemprop="url">{{ shop.name }}</a>
    {%- endif -%}
    {%- if template == 'index' -%}
      </h1>
    {%- else -%}
      </div>
    {%- endif -%}

  {%- endif -%}
{%- endfor -%}

{%- unless has_logo -%}
  {%- style -%}
    /* prevent text-only logo from breaking mobile nav */
    .header-item--logo {
      max-width: 60%;
    }
  {%- endstyle -%}
  {%- if template == 'index' -%}
    <h1 class="site-header__logo" itemscope itemtype="http://schema.org/Organization">
  {%- else -%}
    <div class="h1 site-header__logo" itemscope itemtype="http://schema.org/Organization">
  {%- endif -%}
  <a href="{{ routes.root_url }}" itemprop="url" class="site-header__logo-link">
    {{ shop.name }}
  </a>
  {%- if template == 'index' -%}
    </h1>
  {%- else -%}
    </div>
  {%- endif -%}
{%- endunless -%}
