/* slide-box */

.slide-box {
  width: 100%;
  position: relative;
  margin: 0;
  padding: 0;
}

/* slide */

.slide {
  position: relative;
  margin: 0;
  padding: 0;
}
.slide .item {
  position: relative;
  height: 100%;
}
.slide .item a {
  display: block;
}
.slide .item::before {
  display: block;
  padding-top: 0;
  content: "";
}
.slide .item .image {
  position: relative;
  overflow: hidden;
}
.slide .item img {
  position: relative;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  margin: auto;
  width: 100%;
}
.slide > .slick-list,
.slide > .slick-list > .slick-track,
.slide > .slick-list > .slick-track > .slick-slide > div {
  position: relative;
  height: 100%;
}

/* slide-navigation */
.product-template .product-template .slide-navigation {
  line-height: 0;
  position: relative;
  margin: 0;
  padding: 0;
}
.product-template .slide-navigation .item {
  position: relative;
  cursor: pointer;
}
figure.image{
	margin-block-start: 0;
	margin-inline-start: 0;
	margin-inline-end: 0;
}
.product-template .slide-navigation .item .image {
  position: relative;
  overflow: hidden;
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
}
.product-template .slide-navigation .item .image::before {
  display: block;
  padding-top: 0;
  content: "";
}
.product-template .slide-navigation .item .image::after {
  position: absolute;
  top: 0;
  left: 0;
  display: block;
  width: 100%;
  height: 100%;
  content: "";
  opacity: 0.5;
  background: #fff;
}
.product-template .slide-navigation .slick-current .image::after {
  opacity: 0;
}
.product-template .slide-navigation .item .image {
  position: relative;
  overflow: hidden;
}
.product-template .slide-navigation .item .image img {
  position: relative;
  top: 0;
  bottom: 0;
  right: 0;
  left: 0;
  margin: auto;
  width: 100%;
}
@media screen and (max-width: 767px) {
  .product-template .slide-navigation {
    width: 100%;
  }
  .product-template .slide-navigation .item .image::before {
    padding-top: 0;
  }
