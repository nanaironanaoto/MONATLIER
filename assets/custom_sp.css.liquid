@media screen and (max-width: 768px) {
	.pc{
		display: none;
	}
	.sp{
		display: block;
	}
	.content {
	    padding: 0 30px;
      	overflow: hidden;
    }
	.mv {
	    padding: 0 0 0 24px;
			margin-bottom: 15px;
    }
	.header{
		height: 48px;
    padding-right: 24px;
    padding-left: 24px;
    display: flex;
    align-items: start;
    padding-top: 20px;
		height: 64px;
	}
	.header .header_navi {
		display: none;
	}
	.header .header_menu {
	    width: 100%;
	}
	.header-top-margin {
	    margin-top: 68px;
	}
	.logo {
	    width: 107px;
	}
	.news_row {
	    grid-template-columns: 2fr 5fr;
	}
	.news_row div:first-of-type {
	    font-size: 12px;
	}
	.news_row div:last-of-type {
	    font-size: 14px;
	}
	.slick-dotted.slick-slider {
	    margin-bottom: 20px;
	}
	.news {
	    height: 110px;
	}
	.title h3 {
	    font-size: 20px;
    }
	.title p {
	    font-size: 12px;
    }
	.newitem {
	    grid-template-columns: repeat(2, auto);
        padding-bottom: 54px;
    }
	.newitem .product p.product_info_metal_stone {
	    font-size: 10px;
	}
	.newitem .product p {
	    font-size: 12px;
	    margin-bottom: 7px;
	}
	.newitem a:nth-of-type(odd) {
	    position: relative;
			top: 70px;
	}
	.btn_right a span:first-of-type {
	    font-size: 14px;
	}
	.btn_right a span:last-of-type {
	    font-size: 12px;
	}
  	.hamub-right{
      	width:100%;
    }
    input.hamb_menu_toggle_btn_sp:checked+.sp-hamub {
        opacity: 1;
        pointer-events: auto;
    }
	.top_category {
		margin: 0 auto 50px;
		grid-template-columns: 1fr;
		gap: 30px;
	}
	.top_category div:last-of-type {
	    margin-bottom: 0;
	    position: relative;
	    top: 0;
	}
	.top_category span:last-of-type {
	    font-size: 12px;
	}
	.top_category a {
		width: 100%;
		margin: auto;
		padding: 25px 40px 0;
		border-left: none;
	}
	.top_category>div{
		border-left: 1px solid #ccc;
		display: flex;
		justify-content: center;
		align-content: center;
	}
	.content_bnr {
	    gap: 0;
        padding-bottom: 70px;
	}
	.content_bnr a{
	    line-height: 0;
	    height: 50vw;
	}
	.column_col {
    	display: block;
    }
    .title p {
    	margin-bottom: 40px;
    }
	.column_row {
	    grid-template-columns: 2fr 5fr;
    }
    .footer .footer_logo {
	    display: block;
        margin-bottom: 60px;
	}
	.btn_right {
        padding-bottom: 64px;
	}
    .logo {
	    margin: 0 auto;
	}
	.social_row {
	    width: 45%;
	    justify-content: space-between;
	    column-gap: 24px;
	    padding-left: 0;
	    margin: 15px auto;
	}
	.btn_page_top.tt_drugs_r {
	    width: 100%;
	    text-align: center;
	}
	.btn_page_top a {
	    font-size: 10px;
	    text-decoration: underline;
	}
	.footer {
	    border-top: none;
	}
	.footer {
	    border-top: none;
	    padding: 0;
    }
	.footer_nav {
	    padding: 0;
	    display: block;
	}
	.footer_nav>div {
	    display: grid;
	    grid-template-columns: 1fr 1fr;
	    border-bottom: 1px solid #ccc;
		padding-bottom: 15px;
		margin-bottom: 23px;
	}
	.footer_nav_list {
	    margin-top: 0;
	}
	.footer_nav_list li {
	    font-size: 12px;
	    margin-bottom: 8px;
	}
	.footer_nav_title>a>p:first-of-type {
	    font-size: 14px;
	}
	.footer_nav_title>a>p:last-of-type {
	    font-size: 12px;
	}
	.footer_bottom {
	    display: block;
	}
	.footer_bottom_nav {
	    font-size: 12px;
	    column-gap: 0;
	    justify-content: space-between;
	    margin: 40px 0 20px;
	}
	.allright {
	    font-size: 10px;
	    text-align: center;
        padding-bottom: 20px;
    }
	.top-header .header-icons {
	    padding-right: 0;
	}
	.content_bnr a>div p:first-of-type {
	    font-size: 16px;
	}
	.content_bnr a>div p:last-of-type {
	    font-size: 12px;
	}
	.content_bnr a>div:last-of-type {
	    line-height: 0;
	}

	.product_row{
		display: block;
      	margin-bottom: 70px;
	}
	.product_row>div {
	    width: 100%;
	}
	.product-template .btn_row .btn_row {
	    display: flex;
	}
	.product_material {
	    font-size: 14px;
	    margin-top: 30px;
	    margin-bottom: 15px;
	}
	.product-template .product_name {
	    font-size: 16px;
    }
	.product-template .product_price {
	    font-size: 16px;
	}
	.product-template .btn_row {
	    display: block;
	}
	.product_question {
	    margin-top: 10px;
	    padding-bottom: 35px;
	    border-bottom: solid 1px #ccc;
	    margin-bottom: 35px;
	}
	.product_spec_table dt {
		width: 100px;
    }
	.product_spec_table dd {
	    min-width: auto;
    }
	.product-template .throw_line {
    padding-bottom: 40px;
    margin-bottom: 40px;
    border-bottom: 1px solid #ccc;
	}
    .slide-box {
      margin: 0 0 32px 0;
    }
  	.slide-navigation.slick-initialized.slick-slider {
        margin-top: 12px;
    }
	.btn_row_second {
	    display: block;
	    padding-bottom: 60px;
	    border-bottom: 1px solid #ccc;
	    margin-bottom: 40px;
	}
	.btn_right a span:first-of-type {
	    font-size: 14px;
	}
	.btn_right a span:last-of-type {
	    font-size: 12px;
	}
	.recommendation {
	    grid-template-columns: repeat(2, auto);
	}

	/*collection*/
	.collection_row {
	    display: block;
	}
	.collection_descrption_filter_sort_row{
	    display: block;
	    padding-bottom: 30px;
	}
	.collection_filter_sort_row{
		display: grid;
		grid-template-columns: 1fr 1fr;
		grid-column-gap: 15px;
      	margin-top: 40px;
	}
	.collection_right_area .content {
	    min-width: 100%;
        padding: 0;
	}
	.collection_left_area{
		display: none;
	}
	.collection_left_area.nav_show{
		display: block;
		position: relative;
		background: white;
		width: 100%;
		height: 100%;
	}
	.collection_left_area_bg_row{
		display: grid;
		grid-template-columns: 6fr 1fr;
	    height: 100%;
	}
	.collection_left_area_bg.nav_show{
		background: #00000099;
	    display: block;
	    position: fixed;
	    z-index: 2;
	    left: 0;
	    top: 0;
	    width: 100%;
	    height: 100%;
	}
	.collection_sort{
	    display: flex;
	    justify-content: start;
	    align-items: end;
	    margin: 0 0 15px 0;
	}
	.collection_filter{
	    display: block;
	}
	.collection_filter_sort_row button,.collection_filter_sort_row select{
	    width: 100%;
	}
	.collection_image {
	    padding: 0 0 0 24px;
    }
	.collection_left_area_bg_close_tab.nav_show {
	    display: flex;
	    justify-content: center;
	    padding: 15px;
	}
	.collection_left_area_bg_close_tab.nav_show .batsu {
	    top: 0;
	    right: 0;
	}
	#search_filter button{
		background: #717171;
		color: white;
		height: 40px;
		text-align: left;
		padding: 0 12px;
		font-size: 14px;
		display: inline-flex;
		align-items: center;
		justify-content: space-between;
	}
    .variant-wrapper--dropdown {
      flex-direction: column;
      align-items: start !important;
    }
    .variant-wrapper:nth-of-type(3) {
        display: none !important;
    }
    form#AddToCartForm- {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      row-gap: 20px;
    }
    form#AddToCartForm->div:fitst-of-type {
      grid-column: 1 / 4;
      grid-row   : 1 / 2;
    }
    form#AddToCartForm->button {
      grid-column: 1 / 2;
      grid-row   : 2 / 4;
    }
    form#AddToCartForm->div:last-of-type {
      grid-column: 2 / 4;
      grid-row   : 2 / 4;
    }
    .prodcut_recommend_row {
        display: grid;
        grid-template-columns: repeat(2, auto);
    }
    .boost-pfs-container-default-box {
        padding: 0 24px;
    }
    .boost-pfs-filter-product-item-grid.boost-pfs-filter-grid-width-mb-2 {
        width: 100% !important
    }
    .boost-pfs-filter-products {
        display: grid !important;
        grid-template-columns: repeat(2,auto);
        padding-bottom: 54px;
        gap: 17px;
        width: 100% !important;
        float: none;
        padding-top: 0 !important;
        margin-left: 0 !important;
    }
    .boost-pfs-filter-product-item {
        padding-left: 0 !important;
    }
    .boost-pfs-filter-product-item:nth-of-type(odd) {
        position: relative;
        top: 70px;
    }
    .product_info_metal_stone{
        font-size: 10px !important;
    }
    .boost-pfs-filter-product-item-title .boost-pfs-filter-product-item-title-large,
  	.boost-pfs-filter-product-item-price {
        font-size: 12px !important;
    }
    .boost-pfs-filter-product-item-title p {
        margin-bottom: 7px;
    }
    .boost-pfs-filter-mobile-toolbar-items {
        border-bottom: none !important;
    }
}
